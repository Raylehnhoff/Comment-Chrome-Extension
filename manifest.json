{
  "manifest_version": 2,

  "name": "Comment",
  "description": "Searches and displays reddit comments",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "background",
    "tabs",
    "identity",
    "storage",
    "*://*.reddit.com/*"
  ]
}
